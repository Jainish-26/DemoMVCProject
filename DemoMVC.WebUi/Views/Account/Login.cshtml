@model DemoMVC.Models.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login - OEMS</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/images/Web_Logo.png" rel="shortcut icon" type="image/x-icon" />

    <style>
    body, html {
        margin: 0;
        padding: 0;
        height: 100%;
        background-color: #f3f6fd; /* soft background color */
        font-family: 'Segoe UI', sans-serif;
        overflow: hidden; /* prevent scroll */
    }

    .container-wrapper {
        display: flex;
        height: 100vh;
        border-radius: 20px;
        overflow: hidden;
        box-shadow: 0 20px 50px rgba(0, 0, 0, 0.1);
    }

    .left-panel {
        flex: 1;
        overflow: hidden;
    }

    .left-panel img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .right-panel {
        flex: 1;
        background-color: white;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        padding: 3rem;
    }

    .login-card {
        width: 100%;
        max-width: 400px;
        border: 1px solid #e0e0e0; /* light gray border */
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* subtle shadow */
        border-radius: 15px; /* smooth corners */
        padding: 2rem; /* internal spacing */
        background-color: #ffffff; /* white background */
    }


    .brand {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 10px;
        margin-bottom: 30px;
    }

    .brand img {
        height: 60px;
    }

    .brand-title {
        font-size: 30px;
        font-weight: bold;
        background: linear-gradient(to right, #ff416c, #ff4b2b);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .form-control {
        background-color: #f0f0f0;
        border: none;
        padding: 12px 15px;
        border-radius: 10px;
    }

    .form-control:focus {
        box-shadow: none;
    }

    .btn-login {
        background: linear-gradient(to right, #6a11cb, #2575fc);
        border: none;
        padding: 12px;
        font-size: 1rem;
        font-weight: 500;
        color: white;
        border-radius: 10px;
        width: 100%;
        transition: background 0.3s ease;
    }

    .btn-login:hover {
        opacity: 0.9;
    }

    .form-check-label, .text-muted {
        font-size: 0.9rem;
    }

    .form-links {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 0.5rem;
    }

    @@media (max-width: 768px) {
        .container-wrapper {
            flex-direction: column;
            height: auto;
            border-radius: 0;
        }

        .left-panel,
        .right-panel {
            width: 100%;
            height: auto;
            padding: 2rem;
        }

        .left-panel img {
            height: 250px;
            object-fit: cover;
        }

        .left-panel {
            border-radius: 0;
        }

        .right-panel {
            border-radius: 0;
        }

        body, html {
            overflow-y: auto; /* enable vertical scroll on small screens */
        }
    }
</style>

</head>
<body>
    <div class="container-wrapper">
        <!-- LEFT PANEL -->
        <div class="left-panel">
            <img src="~/content/images/LogInBackGroundImage.jpg" alt="Login Background" />
        </div>

        <!-- RIGHT PANEL -->
        <div class="right-panel">
            <div class="login-card">
                <div class="brand">
                    <img src="~/content/images/Web_Logo.png" alt="Logo" />
                    <span class="brand-title">OEMS</span>
                </div>

                @using (Html.BeginForm(new { returnUrl = ViewBag.ReturnUrl }))
                {
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        @Html.LabelFor(m => m.UserName, "Username", new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Password, "Password", new { @class = "form-label" })
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-links mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="rememberMe">
                            <label class="form-check-label" for="rememberMe">Remember Me</label>
                        </div>
                        <a href="#" class="text-muted text-decoration-none">Forgot password?</a>
                    </div>

                    <div class="d-grid">
                        <button type="submit" class="btn btn-login">Login</button>
                    </div>
                }
            </div>
        </div>
    </div>
</body>
</html>
