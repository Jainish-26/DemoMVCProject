@{
    ViewData["Title"] = "Dashboard";
}

<h2 class="dashboard-heading">Dashboard</h2
<br />
<br />
<br />
<div class="dashboard-container">
    <!-- Users Per Role Chart -->
    <div class="chart-box">
        <h4 class="text-center text-white">Users Per Role</h4>
        <div class="chart-container">
            <canvas id="roleChart"></canvas>
        </div>
    </div>

    <!-- Active vs Inactive Users Chart -->
    <div class="chart-box">
        <h4 class="text-center text-white">Active vs Inactive Users</h4>
        <div class="chart-container">
            <canvas id="userStatusChart"></canvas>
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        loadRoleChart();
        loadUserStatusChart();
    });

    function loadRoleChart() {
        $.getJSON('/Home/GetRoleChartData', function (data) {
            console.log(data);
            var labels = data.map(item => item.RoleName);
            var values = data.map(item => item.UserCount);

            var ctx = document.getElementById("roleChart").getContext("2d");
            new Chart(ctx, {
                type: 'pie',
                data: {
                    labels: labels,

                    datasets: [{
                        label: 'Users per Role',
                        data: values,
                        backgroundColor: ['#00ffff', '#00ff99', '#33ccff', '#ff00ff', '#ff0099']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    //scales: {
                    //    x: {
                    //        ticks: {
                    //            font: { size: 14 }, // Larger font size for better visibility
                    //            autoSkip: false,
                    //            color:"white",

                    //        }
                    //    },
                    //    y: {
                    //        beginAtZero: true,
                    //        ticks: {
                    //            font: { size: 14 } ,// Increase font size for Y-axis
                    //            color : "white"
                    //        }
                    //    }
                    //},
                    plugins: {

                        legend: {
                            position: "bottom",
                            labels: {
                                font: { size: 14, }, // Increase font size for legend
                                color: "white"
                            }
                        }
                    }
                }
            });
        });
    }

    function loadUserStatusChart() {
        $.getJSON('/Home/GetUserStatusChartData', function (data) {
            var labels = data.map(item => item.Status);
            var values = data.map(item => item.Count);

            var ctx = document.getElementById("userStatusChart").getContext("2d");
            new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'User Status',
                        data: values,
                        backgroundColor: ['#27ae60', '#e74c3c']
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        x: {
                            ticks: {
                                font: { size: 14 }, // Larger font size for better visibility
                                autoSkip: false,
                                color: "white",

                            }
                        },
                        y: {
                            beginAtZero: true,
                            ticks: {
                                font: { size: 14 },// Increase font size for Y-axis
                                color: "white"
                            }
                        }
                    },
                    plugins: {
                        legend: {
                            position: 'bottom', // Move legend below for clarity
                            labels: {
                                font: { size: 14 },
                                color: "white"
                            }
                        }
                    }
                }
            });
        });
    }
</script>

<style>
    /* Gradient Background - Professional Look */
    body {
        background: linear-gradient(to right, #2c3e50, #4ca1af);
        color: white;
        font-family: 'Arial', sans-serif;
    }

    .dashboard-heading {
        text-align: center;
        margin-top: 20px;
        font-size: 2.5rem;
        font-weight: bold;
        background: linear-gradient(to right, #00ff99, #33ccff); /* Light Green */
        background: linear-gradient(to right, #00ff99,#33ccff); /* Light Blue & Green */
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        text-shadow: 2px 2px 10px rgba(0, 0, 0, 0.3);
    }

    /* Dashboard Layout */
    .dashboard-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 20px;
        padding: 20px;
    }

    /* Chart Box Styling */
    .chart-box {
        width: 50%;
        max-width: 500px;
        background: rgba(255, 255, 255, 0.2);
        backdrop-filter: blur(10px);
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        text-align: center;
    }

    /* Chart Container */
    .chart-container {
        width: 100%;
        height: 300px; /* Ensures the bar chart fits */
        overflow: hidden;
    }

    /* Canvas Styling */
    canvas {
        width: 100% !important;
        height: auto !important;
    }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .dashboard-container {
            flex-direction: column;
            align-items: center;
        }

        .chart-box {
            width: 90%;
        }
    }
</style>
