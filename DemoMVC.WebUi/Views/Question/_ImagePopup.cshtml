@model DemoMVC.Models.QuestionGridModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Modal</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .modal-content {
            max-width: 90vw;
            max-height: 90vh;
            border-radius: 10px;
            overflow: hidden;
        }

        .modal-body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100%;
            padding: 0;
        }

            .modal-body img {
                width: 100%;
                height: 100%;
                object-fit: contain;
            }

        .placeholder {
            text-align: center;
            width: 100%;
            height: 100%;
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
        }

            .placeholder i {
                font-size: 5rem;
                color: #aaa;
            }

            .placeholder p {
                margin-top: 10px;
                color: #666;
            }
    </style>
</head>
<body>

    <!-- Modal -->
    <div class="modal fade" id="imageModal" tabindex="-1" aria-labelledby="imageModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-body">
                    <!-- Replace 'your-image-url.jpg' with your actual image URL -->
                    <img src="~/content/QuestionImage/@Model.QuestionImage" alt="Question Image" id="modalImage" onerror="showPlaceholder()">

                    <div id="placeholder" class="placeholder" style="display: none;">
                        <i class="fas fa-image"></i>
                        <p>No Image Available</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap & FontAwesome -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/js/all.min.js"></script>

    <script>
        function showPlaceholder() {
            document.getElementById("modalImage").style.display = "none";
            document.getElementById("placeholder").style.display = "flex";
        }
    </script>

</body>
</html>
