<!-- Include Bootstrap 5 (if not already included) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<style>
    /* Styling for the Error Log Card */
    .error-log-container {
        max-width: 750px;
        margin: 30px auto;
        padding: 20px;
        background: rgba(30, 30, 30, 0.9);
        color: #fff;
        border-radius: 12px;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
        backdrop-filter: blur(10px);
        border-left: 5px solid #dc3545;
    }

    .error-log-header {
        background: linear-gradient(135deg, #dc3545, #8b0000);
        padding: 15px;
        text-align: center;
        font-size: 20px;
        font-weight: bold;
        border-radius: 10px 10px 0 0;
    }

    .error-log-item {
        display: flex;
        align-items: center;
        padding: 12px 0;
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
    }

    .error-log-item:last-child {
        border-bottom: none;
    }

    .error-log-label {
        font-weight: 600;
        min-width: 160px;
        color: #ff6b6b;
    }

    .error-log-value {
        flex: 1;
        background: rgba(255, 255, 255, 0.1);
        padding: 8px;
        border-radius: 5px;
        font-size: 14px;
    }

    .error-description {
        width: 100%;
        background: rgba(255, 255, 255, 0.1);
        padding: 10px;
        border-radius: 5px;
        min-height: 80px;
        resize: none;
        font-size: 14px;
    }
</style>

<div class="error-log-container">
    <div class="error-log-header">
        ❌ Error Log Details
    </div>

    <div class="p-3">
        <div class="error-log-item">
            <span class="error-log-label">📅 Date:</span>
            <span class="error-log-value">@Model.CreatedOn</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">📄 Page Name:</span>
            <span class="error-log-value">@Model.PageName</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">⚙️ Method Name:</span>
            <span class="error-log-value">@Model.MethodName</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">📍 Line Number:</span>
            <span class="error-log-value">@Model.LineNumber</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">📝 Description:</span>
            <textarea class="error-description" readonly>@Model.Description</textarea>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">🌍 IP Address:</span>
            <span class="error-log-value">@Model.IpAddress</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">🔍 User Agent:</span>
            <span class="error-log-value">@Model.UserAgent</span>
        </div>

        <div class="error-log-item">
            <span class="error-log-label">🌐 Browser Name:</span>
            <span class="error-log-value">@Model.BrowserNameVersion</span>
        </div>
    </div>
</div>
